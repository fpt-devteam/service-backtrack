{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "types": [
      "node"
    ],
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "paths": {
      "@/src/*": [
        "./src/*"
      ]
    }
  }
}